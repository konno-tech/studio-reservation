<%= render "shared/header" %>
<div class='main'>
<div class='wrap'>

  <%# スタジオ画像の表示 %>

  <%# /スタジオ画像の表示 %>

  <%# 予約一覧の表示 %>
  <div class='reserve-list'>
    <%= month_calendar events: @reservations do |date, reservation| %>
      <%= date.day %>
      <% reservation.each do |i| %>
        <div>
          <%= f = Studio.find_by(id: i.reserve.studio_id).name %>
          <%= g = TimeList.find_by(id: i.time_from_id).name %> ~
          <%= h = TimeList.find_by(id: i.time_to_id).name %>
        </div>
      <% end %>
    <% end %>
  </div>

  <%# /予約一覧の表示 %>

  <%# スタジオ一覧の表示 %>
  <div class='studio-list'>
    <div class='studio-list-header'>
      スタジオ一覧
    </div>
    <ul class='studio-info'>
      <li class='studio-list-table'>
        <h3 class='studio-list-table-header'>
          Studio name
        </h3>
        <ul>
          <% @studios.each do |studio| %>
            <li><%= studio.name %></li>
          <% end %>
        </ul>
      </li>
      <li class='studio-list-table'>
        <h3 class='studio-list-table-header'>
          Price / h
        </h3>
        <ul>
          <% @studios.each do |studio| %>
            <li>¥<%= studio.price.to_s(:delimited) %> / h</li>
          <% end %>
        </ul>
      </li>
      <li class='studio-list-table'>
        <h3 class='studio-list-table-header'>
          その他
        </h3>
        <ul>
          <% if admin_signed_in? %>
            <% @studios.each do |studio| %>
              <li>
                <%= link_to '編集', edit_studio_path(studio.id), class: "detail" %>
                <%= link_to '削除', studio_path(studio.id), method: :delete, class: "detail", data: { confirm: '削除しますか？' } %>
              </li>
            <% end %>
          <% else %>
            <% @studios.each do |studio| %>
              <li>
                <%= link_to 'スタジオ予約はこちら', new_studio_reserf_path(studio.id), class: "detail-user" %>
              </li>
            <% end %>
            <p>その他ご要望などありましたらスタッフまでお声がけください。</p>
          <% end %>
        </ul>
      </li>
    </ul>
    ※表示価格は税抜き価格です。
  </div>
  <%# /スタジオ一覧 %>
</div>
</div>